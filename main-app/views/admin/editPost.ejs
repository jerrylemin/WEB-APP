<!-- views/admin/editPost.ejs -->

<div class="bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-xl font-semibold mb-4">Sửa Bài Viết</h2>
    <% if (error_msg) { %>
        <div class="bg-red-100 text-red-700 p-2 rounded mb-4">
            <%= error_msg %>
        </div>
    <% } %>
    <% if (success_msg) { %>
        <div class="bg-green-100 text-green-700 p-2 rounded mb-4">
            <%= success_msg %>
        </div>
    <% } %>
    <form action="/admin/posts/edit/<%= post._id %>" method="POST" class="space-y-4">
        <div>
            <label for="title" class="block text-sm font-medium text-gray-700">Tên Bài Viết:</label>
            <input type="text" name="title" id="title" value="<%= post.title %>" required class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
        </div>
        <div>
            <label for="content" class="block text-sm font-medium text-gray-700">Nội Dung:</label>
            <textarea name="content" id="content" required class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500"><%= post.content %></textarea>
        </div>
        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Cập Nhật Bài Viết</button>
    </form>
</div>

