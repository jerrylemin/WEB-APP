<!-- views/admin/categories.ejs -->

<div class="flex justify-between items-center mb-4">
    <h2 class="text-xl font-semibold">Danh Sách Danh Mục</h2>
    <a href="/admin/categories/add" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">Thêm Danh Mục</a>
</div>

<div class="overflow-x-auto">
    <table class="min-w-full bg-white shadow-md rounded-lg">
        <thead>
            <tr>
                <th class="py-2 px-4 border-b">Tên Danh Mục</th>
                <th class="py-2 px-4 border-b">Hành Động</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach(category => { %>
                <tr>
                    <td class="py-2 px-4 border-b"><%= category.name %></td>
                    <td class="py-2 px-4 border-b flex space-x-2">
                        <a href="/admin/categories/edit/<%= category._id %>" class="text-blue-500 hover:underline">Sửa</a>
                        <form action="/admin/categories/delete/<%= category._id %>" method="POST" class="inline">
                            <button type="submit" class="text-red-500 hover:underline" onclick="return confirm('Bạn có chắc muốn xóa danh mục này?')">Xóa</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
