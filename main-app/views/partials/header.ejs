<!-- views/partials/header.ejs -->

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <!-- Liên kết tới tệp CSS đã biên dịch -->
    <link href="/css/main.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
</head>
<body class="bg-gray-100">
    <header class="bg-blue-600 text-white p-4">
        <nav class="container mx-auto flex justify-between items-center">
            <div>
                <a href="/" class="text-2xl font-bold">Trang Chủ</a>
            </div>
            <ul class="flex space-x-4">
                <% if (user) { %>
                    <li><a href="/cart" class="hover:underline">Giỏ Hàng</a></li>
                    <% if (user.isAdmin) { %>
                        <li><a href="/admin/dashboard" class="hover:underline">Admin Dashboard</a></li>
                    <% } %>
                    <li><a href="/logout" class="hover:underline">Đăng Xuất</a></li>
                <% } else { %>
                    <li><a href="/login" class="hover:underline">Đăng Nhập</a></li>
                    <li><a href="/register" class="hover:underline">Đăng Ký</a></li>
                <% } %>
            </ul>
        </nav>
    </header>
