<!-- views/layout.ejs -->

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title><%= typeof title !== 'undefined' ? title : 'Trang Web' %></title>
    <link href="/css/main.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
</head>
<body class="bg-gray-100">
    <header class="bg-gray-800 text-white p-4">
        <nav class="container mx-auto flex justify-between items-center">
            <div>
                <a href="/" class="text-2xl font-bold">Trang Chủ</a>
            </div>
            <ul class="flex space-x-4">
                <% if (user && user.isAdmin) { %>
                    <li><a href="/admin/dashboard" class="hover:underline">Admin Dashboard</a></li>
                <% } %>
                <% if (user) { %>
                    <li><a href="/cart" class="hover:underline">Giỏ Hàng</a></li>
                    <li><a href="/categories" class="hover:underline">Danh Mục</a></li>
                    <li><a href="/logout" class="hover:underline">Đăng Xuất</a></li>
                <% } else { %>
                    <li><a href="/login" class="hover:underline">Đăng Nhập</a></li>
                    <li><a href="/register" class="hover:underline">Đăng Ký</a></li>
                <% } %>
            </ul>
        </nav>
    </header>

    <main class="container mx-auto p-4">
        <%- body %>
    </main>

    <footer class="bg-gray-800 text-white p-4 mt-8">
        <div class="container mx-auto text-center">
            <p>&copy; 2024 Your Company. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>
