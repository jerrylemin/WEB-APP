<!-- views/layout.ejs -->

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Berkshire+Swash&display=swap" rel="stylesheet">
    <link href="/css/main.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/e88fd7b48a.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
</head>
<body class="bg-cream">
    <header class="p-4">
        <nav class="bg-tertiaryGreen rounded-outer flex justify-between items-center h-[70px] px-4 drop-shadow-bars">
            <!-- Brand Title -->
            <div class="text-red text-big font-title">
                Brewtiful
            </div>

            <!-- Navigation Options -->
            <div class="relative h-full">
                <ul class="flex items-center space-x-4 h-full">
                    <li class="h-3/4 rounded-inner hover:bg-primaryGreen"><a href="#" class="inline-block py-3 px-6 h-full text-red font-serif font-bold hover:text-white">Trang chủ</a></li>
                    <li class="h-3/4 rounded-inner hover:bg-primaryGreen"><a href="#" class="inline-block py-3 px-6 h-full text-red font-serif font-bold hover:text-white">Sản phẩm</a></li>
                    <li class="h-3/4 rounded-inner relative group">
                        <a href="#" class="block py-3 px-6 text-white font-serif font-bold bg-red w-full">Khách hàng</a>
                        <!-- Dropdown Menu -->
                        <ul class="absolute rounded-outer left-0 top-14 hidden bg-secondaryGreen text-white w-full group-hover:block">
                            <li class="text-center rounded-inner hover:bg-red"><a href="#" class="block py-3 px-6 font-serif font-bold hover:text-white">Tài khoản</a></li>
                            <li class="text-center rounded-inner hover:bg-red"><a href="#" class="block py-3 px-6 font-serif font-bold hover:text-white">Giỏ hàng</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <!-- Nội dung chính của từng trang sẽ được chèn vào đây -->
    <%- body %>

    <footer class="bg-gray-800 text-white p-4 mt-8">
        <div class="container mx-auto text-center">
            <p>&copy; 2024 Your Company. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>
