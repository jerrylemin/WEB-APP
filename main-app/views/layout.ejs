<!-- views/layout.ejs -->

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <link href="/css/main.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
</head>
<body class="bg-gray-100">
    <header class="bg-gray-800 text-white p-4">
        <nav class="container mx-auto flex justify-between items-center">
            <div>
                <a href="/" class="text-2xl font-bold">Your Brand</a>
            </div>
            <ul class="flex space-x-4">
                <!-- Liên kết Sản Phẩm luôn được hiển thị -->
                <li><a href="/products" class="hover:underline">Sản Phẩm</a></li>
                
                <!-- Liên kết Admin Dashboard chỉ hiển thị cho Admin -->
                <% if (user && user.isAdmin) { %>
                    <li><a href="/admin/dashboard" class="hover:underline">Admin Dashboard</a></li>
                <% } %>
                
                <!-- Các liên kết dành cho người dùng đã đăng nhập -->
                <% if (user) { %>
                    <li><a href="/profile" class="hover:underline">My Profile</a></li>
                    <li><a href="/cart" class="hover:underline">Giỏ Hàng</a></li>
                    <li><a href="/categories" class="hover:underline">Danh Mục</a></li>
                    <li><a href="/logout" class="hover:underline">Đăng Xuất</a></li>
                <% } else { %>
                    <!-- Các liên kết dành cho người dùng chưa đăng nhập -->
                    <li><a href="/login" class="hover:underline">Đăng Nhập</a></li>
                    <li><a href="/register" class="hover:underline">Đăng Ký</a></li>
                <% } %>
            </ul>
            <form action="/products/search" method="GET" class="flex items-center">
                <input type="text" name="q" placeholder="Tìm kiếm..." class="px-2 py-1 rounded">
                <button type="submit" class="ml-2 bg-blue-500 px-3 py-1 rounded">Tìm</button>
            </form>
        </nav>
    </header>

    <!-- Nội dung chính của từng trang sẽ được chèn vào đây -->
    <%- body %>

    <footer class="bg-gray-800 text-white p-4 mt-8">
        <div class="container mx-auto text-center">
            <p>&copy; 2024 Your Company. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>
