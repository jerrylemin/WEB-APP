<main class="container flex flex-row justify-center">
    <div class="w-1/3 relative">
        <img class="relative" src="images/webPageResources/bg/bobacup.png" alt="">
    </div>
    <div class="w-5/12 rounded-outer backdrop-blur-lg border border-primaryGreen p-4 bg-tertiaryGreen/40 z-10">
        <h1 class="text-big font-serif font-bold mb-4 text-red text-center">Thông tin người dùng</h1>
        <div class="mb-4">
            <p class="text-medium font-serif font-bold text-black">Tên:</p>
            <p class="mt-1 text-medium font-serif text-black"><%= user.name %></p>
        </div>
        <div class="mb-4">
            <p class="text-medium font-serif text-black">Email:</p>
            <p class="mt-1 text-medium font-serif text-black"><%= user.email %></p>
        </div>
        <div class="mb-4">
            <p class="text-medium font-serif font-bold text-black">Địa chỉ:</p>
            <p class="mt-1 text-medium font-serif text-black">
                <% if(!user.address) { %> 
                    <i>Bạn chưa cập nhật địa chỉ.</i>
                <% } else { %>    
                    <%=user.email %>
                <% } %>
            </p>
        </div>
        <div class="mb-4">
            <p class="text-medium font-serif font-bold text-black">Số điện thoại:</p>
            <p class="mt-1 text-medium font-serif text-black">
                <% if(!user.phoneNumber) { %> 
                    <i>Bạn chưa cập nhật số điện thoại.</i>
                <% } else { %>    
                    <%=user.phoneNumber %>
                <% } %>
            </p>
        </div>
        <div class="mb-4">
            <p class="text-medium font-serif font-bold text-black">Số Dư:</p>
            <p class="mt-1 text-medium font-serif text-black"><%= user.balance.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }) %></p>
        </div>
        <div class="flex justify-center space-x-4">
            <a href="/profile/edit" class="bg-primaryGreen text-white font-serif px-4 py-2 rounded-outer hover:bg-green-600">Chỉnh Sửa Hồ Sơ</a>
            <a href="/balance/edit" class="bg-primaryGreen text-white font-serif px-4 py-2 rounded-outer hover:bg-green-600">Cập Nhật Số Dư</a>
            <a href="/orders" class="bg-primaryGreen text-white font-serif px-4 py-2 rounded-outer hover:bg-green-600">Xem Đơn Hàng</a>
        </div>
    </div>
</main>
