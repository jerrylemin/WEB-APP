<main class="flex flex-row justify-center gap-3">
    <div class="w-5/12 h-[70vh] relative bg-[url('../images/webPageResources/bg/bobacup.png')] bg-[percentage:80%_100%] bg-center bg-no-repeat">
        <div class="w-1/3 flex flex-col gap-3 absolute right-0">
            <a href="/profile/edit" class="transition-transform transform hover:scale-110 shadow-lg bg-yellow/40 backdrop-blur-lg border border-yellow text-center font-bold font-serif px-4 py-2 rounded-outer hover:bg-red hover:text-white">Chỉnh Sửa Hồ Sơ</a>
            <a href="/balance/edit" class="transition-transform transform hover:scale-110 shadow-lg bg-yellow/40 backdrop-blur-lg border border-yellow text-center font-bold font-serif px-4 py-2 rounded-outer hover:bg-red hover:text-white">Cập Nhật Số Dư</a>
            <a href="/orders" class="transition-transform transform hover:scale-110 shadow-lg bg-yellow/40 backdrop-blur-lg border border-yellow text-center font-bold font-serif px-4 py-2 rounded-outer hover:bg-red hover:text-white">Xem Đơn Hàng</a>
        </div>
    </div>
    <div class="w-5/12 rounded-outer backdrop-blur-lg border border-primaryGreen p-4 bg-tertiaryGreen/40 z-10">
        <h1 class="text-big font-serif font-bold mb-4 text-red text-center">Thông tin người dùng</h1>
        <div class="mb-4">
            <p class="text-medium font-serif font-bold text-black">Tên:</p>
            <p class="mt-1 text-medium font-serif text-black"><%= user.name %></p>
        </div>
        <div class="mb-4">
            <p class="text-medium font-serif font-bold text-black">Email:</p>
            <p class="mt-1 text-medium font-serif text-black"><%= user.email %></p>
        </div>
        <div class="mb-4">
            <p class="text-medium font-serif font-bold text-black">Địa chỉ:</p>
            <p class="mt-1 text-medium font-serif text-black">
                <% if(!user.address) { %> 
                    <i>Bạn chưa cập nhật địa chỉ.</i>
                <% } else { %>    
                    <%=user.address %>
                <% } %>
            </p>
        </div>
        <div class="mb-4">
            <p class="text-medium font-serif font-bold text-black">Số điện thoại:</p>
            <p class="mt-1 text-medium font-serif text-black">
                <% if(!user.phoneNumber) { %> 
                    <i>Bạn chưa cập nhật số điện thoại.</i>
                <% } else { %>    
                    <%=user.phoneNumber %>
                <% } %>
            </p>
        </div>
        <div class="mb-4">
            <p class="text-medium font-serif font-bold text-black">Tài khoản ngân hàng:</p>
            <p class="mt-1 text-medium font-serif text-black"><%= user.bankAccountID %></p>
        </div>
    </div>
</main>
