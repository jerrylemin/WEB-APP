<!-- views/client/profile.ejs -->

<main class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Hồ Sơ Của Bạn</h1>
    <div class="bg-white p-6 rounded-lg shadow-md">
        <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700">Tên:</label>
            <p class="mt-1 text-lg text-gray-900"><%= user.name %></p>
        </div>
        <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700">Email:</label>
            <p class="mt-1 text-lg text-gray-900"><%= user.email %></p>
        </div>
        <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700">Số Dư:</label>
            <p class="mt-1 text-lg text-gray-900"><%= user.balance.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }) %></p>
        </div>
        <div class="flex space-x-4">
            <a href="/profile/edit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Chỉnh Sửa Hồ Sơ</a>
            <a href="/balance/edit" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">Cập Nhật Số Dư</a>
            <a href="/orders" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Xem Đơn Hàng</a>
        </div>
    </div>
</main>
