<!-- views/client/products.ejs -->

<main class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Danh Sách Sản Phẩm</h1>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <% products.forEach(product => { %>
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <img src="<%= product.imageUrl %>" alt="<%= product.name %>" class="w-full h-48 object-cover">
                <div class="p-4">
                    <h2 class="text-xl font-semibold mb-2"><%= product.name %></h2>
                    <p class="text-gray-700 mb-4"><%= product.description.substring(0, 100) %>...</p>
                    <div class="flex justify-between items-center">
                        <span class="text-lg font-bold text-green-600"><%= product.price.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }) %></span>
                        <a href="/products/<%= product._id %>" class="bg-blue-500 text-white px-3 py-1 rounded hover:bg-blue-600">Chi Tiết</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</main>
