<!-- views/client/orders.ejs -->

<main class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Đơn Hàng Của Bạn</h1>
    <% if (orders.length > 0) { %>
        <table class="min-w-full bg-white">
            <thead>
                <tr>
                    <th class="py-2 px-4 border-b">Mã Đơn Hàng</th>
                    <th class="py-2 px-4 border-b">Ngày Đặt</th>
                    <th class="py-2 px-4 border-b">Tổng Tiền</th>
                    <th class="py-2 px-4 border-b">Trạng Thái</th>
                    <th class="py-2 px-4 border-b">Chi Tiết</th>
                </tr>
            </thead>
            <tbody>
                <% orders.forEach(order => { %>
                    <tr>
                        <td class="py-2 px-4 border-b"><%= order._id %></td>
                        <td class="py-2 px-4 border-b"><%= new Date(order.createdAt).toLocaleDateString('vi-VN') %></td>
                        <td class="py-2 px-4 border-b"><%= order.cart.totalPrice.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }) %></td>
                        <td class="py-2 px-4 border-b"><%= order.status %></td>
                        <td class="py-2 px-4 border-b">
                            <a href="/orders/<%= order._id %>" class="text-blue-500 hover:underline">Xem</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p>Bạn chưa có đơn hàng nào.</p>
    <% } %>
</main>
<script>
    window.onload = function(e) {
        <% if(message) { %>
            showNotification("<%= message %>");
        <% } %>
    }
</script>