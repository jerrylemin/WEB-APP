<!-- views/client/orders.ejs -->

<%- include('../partials/header', { title: 'Đơn Hàng Của Bạn' }) %>

<main class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Đơn Hàng Của Bạn</h1>
    <% if (orders.length > 0) { %>
        <div class="overflow-x-auto">
            <table class="min-w-full bg-white">
                <thead>
                    <tr>
                        <th class="py-2 px-4 border-b">Mã Đơn Hàng</th>
                        <th class="py-2 px-4 border-b">Ngày Đặt</th>
                        <th class="py-2 px-4 border-b">Tổng Tiền</th>
                        <th class="py-2 px-4 border-b">Trạng Thái</th>
                        <th class="py-2 px-4 border-b">Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    <% orders.forEach(order => { %>
                        <tr>
                            <td class="py-2 px-4 border-b"><%= order._id %></td>
                            <td class="py-2 px-4 border-b"><%= order.createdAt.toLocaleDateString('vi-VN') %></td>
                            <td class="py-2 px-4 border-b"><%= order.totalPrice.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }) %></td>
                            <td class="py-2 px-4 border-b"><%= order.status %></td>
                            <td class="py-2 px-4 border-b">
                                <a href="/orders/<%= order._id %>" class="text-blue-500 hover:underline">Xem</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    <% } else { %>
        <p class="text-lg">Bạn chưa có đơn hàng nào. <a href="/products" class="text-blue-500 underline">Mua sắm ngay!</a></p>
    <% } %>
</main>

<%- include('../partials/footer') %>
