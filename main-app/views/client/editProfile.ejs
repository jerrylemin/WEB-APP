<main class="w-5/12 mx-auto">
    <h1 class="font-serif text-big text-red text-center font-bold mb-4">Chỉnh Sửa Hồ Sơ</h1>
    <form action="/profile/edit" method="POST" class="bg-tertiaryGreen/40 p-6 rounded-outer border border-primaryGreen shadow-md">
        <div class="mb-4">
            <label for="name" class="block font-bold text-medium">Tên:</label>
            <input type="text" name="name" id="name" value="<%= user.name %>" class="mt-1 block w-full border-gray-300 rounded-md font-serif">
        </div>
        <div class="mb-4">
            <label for="email" class="block font-bold text-medium">Email:</label>
            <input type="email" name="email" id="email" value="<%= user.email %>" class="mt-1 block w-full border-gray-300 rounded-md font-serif">
        </div>
        <div class="mb-4">
            <label for="address" class="block font-bold text-medium">Địa chỉ:</label>
            <input type="text" name="address" id="address" <% if(user.address) { %>value="<%= user.address %>"<% } else { %>placeholder="Điền địa chỉ vào đây"<% } %> class="mt-1 block w-full border-gray-300 rounded-md font-serif text-medium">
        </div>
        <div class="mb-4">
            <label for="phoneNumber" class="block font-bold text-medium">Số điện thoại:</label>
            <input type="text" name="phoneNumber" id="phoneNumber" <% if(user.address) { %>value="<%= user.phoneNumber %>"<% } else { %>placeholder="Điền số điện thoại vào đây"<% } %> class="mt-1 block w-full border-gray-300 rounded-md font-serif text-medium"> 
        </div>
        <!-- <div class="mb-4">
            <label for="password" class="block text-sm font-medium text-gray-700">Mật Khẩu Mới (nếu có):</label>
            <input type="password" name="password" id="password" class="mt-1 block w-full border-gray-300 rounded-md">
        </div> -->
        <div class="flex justify-center space-x-4">
            <button type="submit" class="updateBttn bg-yellow/40 border border-yellow font-bold px-4 py-2 rounded-outer hover:bg-red hover:text-white">Cập Nhật</button>
            <a href="/profile" class="bg-yellow/40 border border-yellow font-bold px-4 py-2 rounded-outer hover:bg-red hover:text-white">Hủy</a>
        </div>
    </form>
</main> 
